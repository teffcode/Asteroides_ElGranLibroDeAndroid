<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.android.teffcode.asteroides.MainActivity">

    <TextView
        android:id="@+id/titulo_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_principal"
        android:layout_gravity="center"
        android:textSize="@dimen/tamano_titulos"
        android:layout_margin="@dimen/margen_titulos"/>
    <Button
        android:id="@+id/boton1_jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton1_jugar"
        />
    <Button
        android:id="@+id/boton1_configurar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton2_configurar"
        />
    <Button
        android:id="@+id/boton3_acercade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton3_acercade"
        />
    <Button
        android:id="@+id/boton4_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton4_salir"
        />

</LinearLayout>
